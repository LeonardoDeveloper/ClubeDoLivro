@page "/autor-list"

<PageTitle>Clube do Livro :: Autores</PageTitle>

<h1>Autores</h1>


@if (Autores == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudButton Variant="Variant.Filled" Color="Color.Primary" @onclick="e=>OpenPopup()">Adicionar</MudButton>

    <MudDataGrid Items="@Autores.Take(4)">
        <Columns>
            <PropertyColumn Property="x => x.Id" Title="Identificador"/>
            <PropertyColumn Property="x => x.Nome" />
            <PropertyColumn Property="x => x.SobreNome" />
            <PropertyColumn Property="x => x.LivrosEscritos" Title="Livros Escritos" />
            <TemplateColumn CellClass="d-flex justify-end">
                <CellTemplate>
                    <MudStack Row>
                        <MudButton Size="@Size.Small" Variant="Variant.Filled" Color="Color.Primary" @onclick="e=>OpenPopup(context.Item)">Editar</MudButton>
                        <MudButton Size="@Size.Small" Variant="Variant.Filled" Color="Color.Primary" @onclick="e=>OpenPopup(context.Item, true)">Remover</MudButton>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
    </MudDataGrid>
}
